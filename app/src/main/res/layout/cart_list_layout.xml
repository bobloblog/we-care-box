<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:selectableItemBackground"
    android:checkable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="6dp">

        <ImageView
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:id="@+id/cart_product_image"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/cart_product_name"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/cart_product_image"
            android:layout_toEndOf="@+id/cart_product_image"
            android:paddingLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/cart_product_short_descr"
            android:layout_below="@+id/cart_product_name"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:paddingRight="12dp"
            android:layout_toRightOf="@+id/cart_product_image"
            android:layout_toEndOf="@+id/cart_product_image"
            android:layout_toStartOf="@+id/cart_product_price"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="$19.95"
            android:id="@+id/cart_product_price"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <!--<NumberPicker-->
            <!--android:layout_width="20dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:id="@+id/cart_number_picker"-->
            <!--android:orientation="horizontal"-->
            <!--android:paddingRight="8dp"-->
            <!--android:layout_marginRight="15dp"-->
            <!--android:layout_marginEnd="15dp"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:layout_toLeftOf="@+id/cart_product_price"-->
            <!--android:layout_toStartOf="@+id/cart_product_price"></NumberPicker>-->

    </RelativeLayout>
</LinearLayout>
